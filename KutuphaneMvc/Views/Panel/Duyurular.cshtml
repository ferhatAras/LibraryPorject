@using KutuphaneMvc.Models.Entities;
@model List<TBLDUYURU>
@{
    ViewBag.Title = "Duyurular";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<table class="table table-hover">
    <tr style="background-color: #00215E;color:#fff">

        <th>KATEGORİ</th>
        <th>TARİH</th>
        <th>İÇERİK</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.KATEGORI</td>
            <td>@Convert.ToDateTime(prs.TARIH).ToString("dd/MM/yyyy")</td>
            <td>@prs.ICERIK</td>
        </tr>
    }
</table>


