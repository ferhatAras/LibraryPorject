@model KutuphaneMvc.Models.Entities.TBLKATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-label ">
        <br />
        @*@Html.LabelFor(k => k.ID)*@
        <label class="mb-3">ID</label>

        @Html.TextBoxFor(k => k.ID, new { @class = "form-control form-control-lg" })
        <br />
        @*@Html.LabelFor(k=>k.AD)*@

        <label class="mb-3">KATEGORİ ADI</label>
        @Html.TextBoxFor(k => k.AD, new { @class = "form-control form-control-lg " })
    </div>
    <div class="mt-3">
        <button class="btn btn-primary btn-lg">Güncelle</button>
    </div>
}

