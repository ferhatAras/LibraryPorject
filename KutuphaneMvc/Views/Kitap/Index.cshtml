@using KutuphaneMvc.Models.Entities
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="margin-top:15px">Kitaplar Sayfası</h2>
@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
    {
        <div style="margin-bottom:15px; margin-top:15px;">
            <b>Kitap Ara : &nbsp</b>@Html.TextBox("p")
            <input type="submit" value="Ara" />
        </div>
    }


<table class="table table-hover">

    <tr style="background-color: #00215E;color:#fff">
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kitap Kategori</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD&nbsp @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>
            <td>@k.BASIMYILI</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td><a href="/Kitap/Sil/@k.ID" class="btn btn-outline-danger btn-lg">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-outline-primary btn-lg">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Kitap/KitapEkle/" class="btn btn-primary btn-lg">Yeni Kitap Ekle</a>
