@model KutuphaneMvc.Models.Entities.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div style="margin-top:18px">
        <div class="form-group mb-3">
            <div style="margin-bottom:15px">
                <label>Yazar ID</label>
                @Html.TextBoxFor(y => y.ID, new { @class = "form-control form-control-lg" })
            </div>
            <div style="margin-bottom:15px">
                <label>Yazar Adı</label>
                @Html.TextBoxFor(y => y.AD, new { @class = "form-control form-control-lg" })
            </div>
            <div style="margin-bottom:15px">
                <label>Yazar SoyAd</label>
                @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control form-control-lg" })
            </div>
            <div style="margin-bottom:15px">
                <label>Yazar Bilgileri</label>
                @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control form-control-lg" })
            </div>
            <button class="btn btn-primary btn-lg">Güncelle</button>
        </div>
    </div>
}

