@using KutuphaneMvc.Models.Entities
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-hover">
    <tr style="background-color: #00215E;color:#fff">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Yazarın Kitapları</th>
    </tr>
    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-outline-danger btn-lg", onclick = "return confirm('Silmek İstiyor musunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-outline-primary btn-lg">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-danger btn-lg">Yazarın Kitapları</a></td>
        </tr>
    }
</table>

<a href="/Yazar/YazarEkle/" class="btn btn-primary btn-lg">Yeni Yazar Ekle</a>

