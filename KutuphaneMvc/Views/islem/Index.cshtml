@using KutuphaneMvc.Models.Entities
@model List<TBLHARAKET>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2 style="margin-top:15px">İade Olan Kitap Listesi</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px;">
        @*<b>Kitap Ara : &nbsp</b>@Html.TextBox("p")
            <input type="submit" value="Ara" />*@
    </div>
}


<table class="table table-hover">

    <tr  style="background-color: #00215E;color:#fff">
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>


    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.ID</td>
            <td>@k.TBLKITAP.AD</td>
            <td>@k.TBLUYELER.AD&nbsp @k.TBLUYELER.SOYAD</td>
            <td>@k.TBLPERSONEL.PERSONEL</td>
            <td>@Convert.ToDateTime(k.ALISTARIHI).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(k.IADETARIH).ToString("dd/MM/yyyy")</td>

            <td><a href="/Odunc/Odunciade/@k.ID" class="btn btn-outline-danger btn-lg">Detaylar</a></td>

        </tr>
    }

</table>

