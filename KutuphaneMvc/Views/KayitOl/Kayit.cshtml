<html lang="en">
<head>
    <title>Mvc5 Kütüphane Kayıt Ol</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Course Register Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- css files -->
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="~/webregister/css/style.css" type="text/css" rel="stylesheet" media="all">
    <!-- //css files -->

    <link rel="stylesheet" href="~/webregister/css/font-awesome.css"> <!-- Font-Awesome-Icons-CSS -->

</head>
<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="register-full">
            <div class="register-left">
                <div class="register">
                    <div class="logo">
                        <a href="#"><span class="fa fa-graduation-cap" aria-hidden="true"></span></a>
                    </div>
                    <h1>Kütüphane Kayıt</h1>
                    <p>
                        Kütüphanemize hoşgeldiniz, kayıt olmak için sağ tarafta bulunan paneldeki bilgileri eksiksiz bir şekilde girerek kaydınızı gerçekleştirebilirsiniz.
                    </p>
                    <div class="content3">
                        <ul>
                            <li><a class="" href="/Login/GirisYap/"> Giriş Yap</a></li>
                            <li><a class="read" href="/Vitrin/Index/"> Siteye Dön</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="register-right">
                <div class="register-in">
                    <h2><span class="fa fa-pencil"></span> Kayıt Ol</h2>
                    <div class="register-form">
                        <form action="/KayitOl/Kayit" method="post">
                            <div class="fields-grid">
                                <div class="styled-input agile-styled-input-top">
                                    @Html.EditorFor(model => model.AD, new { htmlAttributes = new { @class = "form-control", placeholder = "Adınız" } })
                                    @*<label>Adınız</label>*@
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    @Html.EditorFor(model => model.SOYAD, new { htmlAttributes = new { @class = "form-control", placeholder = "Soyadınız" } })
                                    @*<label>Soyadınız</label>*@
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    @Html.EditorFor(model => model.MAIL, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                    @*<label>Email</label>*@
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    @Html.EditorFor(model => model.KULLANICIADI, new { htmlAttributes = new { @class = "form-control", placeholder = "Kullanıcı Adı" } })
                                    <label></label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    @Html.PasswordFor(model => model.SIFRE, new { htmlAttributes = new { @class = "form-control", placeholder = "Şifre" } })
                                    <label>Şifre</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    @Html.EditorFor(model => model.TELEFON, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefon" } })
                                    @*<label>Telefon</label>*@
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <select id="category2" name="OKUL" class="form-control" required="">
                                        <option value="">Okulunuzu Seçin*</option>
                                        <option value="Firat">Fırat Üniversitesi</option>
                                        <option value="Gazi">Gazi Üniversitesi</option>
                                        <option value="Akdeniz">Akdeniz Üniversitesi</option>
                                        <option value="Cukurova">Çukurova Üniversitesi</option>
                                        <option value="Uludag">Uludağ Üniversitesi</option>
                                        <option value="Karabuk">Karabük Üniversitesi</option>
                                        <option value="Anadolu">Gazi  Üniversitesi</option>
                                        <option value="Anadolu">Ankara Üniversitesi</option>
                                        <option value="Anadolu">Hacettepe Üniversitesi</option>
                                        <option value="Anadolu">Boğaziçi  Üniversitesi</option>
                                        <option value="Anadolu">Yıldız Teknik Üniversitesi</option>
                                        <option value="Anadolu">Atatürk Üniversitesi</option>
                                        <option value="Anadolu">Marmara Üniversitesi</option>
                                        <option value="Anadolu">Dokuz Eylül Üniversitesi</option>
                                        <option value="Anadolu">Karadeniz Teknik Üniversitesi</option>
                                    </select>
                                    <span></span>
                                </div>
                                <div class="clear"> </div>
                                <label class="checkbox"><input type="checkbox" name="checkbox" checked><i></i>Şartları okudum <a href="#">kabul ediyorum</a></label>
                            </div>
                            <input type="submit" value="Kayıt Ol">
                        </form>
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>

    </section>
    <!-- //section -->
</body>
<!-- //body ends -->
</html>
